<article class="post">
  <div class="post-title">
    <a href="/post/{{id}}">{{title}}</a>
    <div>
      <div class="post-text">
      <a href="/post/{{id}}">{{text}}</a>
      <div class="meta"></div>
      Posted by {{user.username}} on {{format_date created_at}} ({{escaped}}{{format_timeElapsed created_at}} ago){{escaped}}
      </div>
    </div>
    <div>
      <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
  </div>
</article>